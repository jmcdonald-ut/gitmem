{
  "name": "gitmem",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "gitmem": "./src/cli.tsx"
  },
  "scripts": {
    "build": "bun build --production --compile src/cli.tsx --format=esm --bytecode --minify --outfile build/gitmem",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}'",
    "test": "bun test",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.76.0",
    "@commander-js/extra-typings": "^14.0.0",
    "@inkjs/ui": "^2.0.0",
    "commander": "^14.0.3",
    "ink": "^6.7.0",
    "ink-spinner": "^5.0.0",
    "react": "^19.2.4",
    "react-devtools-core": "^7.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "^1.2.4",
    "@types/react": "^19.2.14",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.5.0",
    "typescript-eslint": "^8.22.0"
  }
}
