{
  "name": "gitmem",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "gitmem": "./src/cli.tsx"
  },
  "scripts": {
    "build": "bun build src/cli.tsx --compile --outfile build/gitmem && find . -maxdepth 1 -name '*.bun-build' -delete",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx}'",
    "test": "bun test",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@inkjs/ui": "^2.0.0",
    "commander": "^13.1.0",
    "ink": "^5.1.0",
    "ink-spinner": "^5.0.0",
    "react": "^18.3.1",
    "react-devtools-core": "^7.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/bun": "^1.2.4",
    "@types/react": "^18.3.18",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.5.0",
    "typescript-eslint": "^8.22.0"
  }
}
